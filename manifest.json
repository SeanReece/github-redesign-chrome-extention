{
    "name": "Github++",
    "version": "1.0",
    "description": "Opinionated github improvements",
    "manifest_version": 2,
    "permissions": ["activeTab", "storage"],
    "content_scripts": [
      {
        "matches": ["https://*.github.com/*/*"],
        "css": ["github.css"],
        "js": ["github.js"]
      }
    ],
    "page_action": {
      "default_icon": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    }
  }
